{% comment %}
BretLab Jersey Customizer – Product block
Auto-detect jersey by product.handle (supports dev + live handles)
{% endcomment %}

{%- assign h = product.handle | downcase -%}

{%- assign is_brazil = false -%}
{%- assign is_argentina = false -%}

{%- if h contains 'jersey-brasil' -%}
  {%- assign is_brazil = true -%}
{%- elsif h contains 'jersey-argentina' -%}
  {%- assign is_argentina = true -%}
{%- endif -%}

{%- comment -%}
Fallback: if product title contains keywords (in case handle is different)
{%- endcomment -%}
{%- if is_brazil == false and is_argentina == false -%}
  {%- assign t = product.title | downcase -%}
  {%- if t contains 'brasil' or t contains 'brazil' -%}
    {%- assign is_brazil = true -%}
  {%- elsif t contains 'argentina' -%}
    {%- assign is_argentina = true -%}
  {%- endif -%}
{%- endif -%}

{%- comment -%}
Default to Argentina if still not detected (you can change to hide block if you want)
{%- endcomment -%}
{%- assign default_image = 'jersey-argentina.png' -%}
{%- assign default_color = '#000000' -%}

{%- if is_brazil -%}
  {%- assign default_image = 'jersey-brasil.png' -%}
  {%- assign default_color = '#0b6b3a' -%} 
{%- elsif is_argentina -%}
  {%- assign default_image = 'jersey-argentina.png' -%}
  {%- assign default_color = '#000000' -%}
{%- endif -%}

<div class="jersey-customizer"
     data-default-image="{{ default_image | escape }}"
     data-default-color="{{ default_color | escape }}">

  <h3 class="jc-title">Personaliza tu camiseta</h3>
  <p class="jc-subtitle">Elige nombre y número para tu camiseta.</p>

  <!-- FORMULARIO -->
  <div class="jc-form">
    <label>
      Nombre del jugador
      <input type="text" id="jc-name" placeholder="Ej: León" />
    </label>

    <label>
      Número
      <input type="number" id="jc-number" min="0" max="99" placeholder="10" />
    </label>
  </div>

  <!-- PREVIEW -->
  <div class="jc-preview">
    <div class="jc-preview-box">
      <img
        id="jc-jersey-img"
        src="{{ default_image | asset_url }}"
        alt="Jersey base"
        loading="lazy"
      />

      <div class="jc-overlay">
        <div id="preview-name" class="jc-preview-name">JUGADOR</div>
        <div id="preview-number" class="jc-preview-number">10</div>
      </div>
    </div>
  </div>
</div>

<style>
  .jersey-customizer {
    max-width: 420px;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
  }

  .jc-title {
    font-size: 20px;
    font-weight: 700;
    margin-bottom: 4px;
  }

  .jc-subtitle {
    font-size: 14px;
    color: #555;
    margin-bottom: 16px;
  }

  .jc-form label {
    display: block;
    font-size: 13px;
    font-weight: 600;
    margin-bottom: 10px;
  }

  .jc-form input {
    width: 100%;
    padding: 6px 8px;
    margin-top: 4px;
    box-sizing: border-box;
  }

  /* === PREVIEW === */
  .jc-preview { margin-top: 16px; }

  .jc-preview-box {
    position: relative;
    width: 320px;
    max-width: 100%;
    border-radius: 10px;
    overflow: hidden;
  }

  .jc-preview-box img {
    width: 100%;
    display: block;
  }

  /* === OVERLAY === */
  .jc-overlay {
    position: absolute;
    inset: 0;
    pointer-events: none;
    text-align: center;
  }

  .jc-preview-name {
    position: absolute;
    top: 55px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 22px;
    font-weight: 800;
    letter-spacing: 1px;
    color: #000;
    text-transform: uppercase;
    line-height: 1;
    white-space: nowrap;
    text-shadow:
      2px 2px 0 #fff,
     -2px 2px 0 #fff,
      2px -2px 0 #fff,
     -2px -2px 0 #fff;
  }

  .jc-preview-number {
    position: absolute;
    top: 45%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 100px;
    font-weight: 900;
    color: #000;
    line-height: 0.9;
    letter-spacing: -2px;
    text-shadow:
      3px 3px 0 #fff,
     -3px 3px 0 #fff,
      3px -3px 0 #fff,
     -3px -3px 0 #fff;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const root = document.querySelector(".jersey-customizer");
    if (!root) return;

    const nameInput = document.getElementById("jc-name");
    const numberInput = document.getElementById("jc-number");

    const previewName = document.getElementById("preview-name");
    const previewNumber = document.getElementById("preview-number");

    const defaultColor = root.dataset.defaultColor || "#000000";

    // aplicar color default (Argentina negro / Brasil verde musgo)
    previewName.style.color = defaultColor;
    previewNumber.style.color = defaultColor;

    nameInput.addEventListener("input", () => {
      previewName.textContent = (nameInput.value || "JUGADOR").toUpperCase();
    });

    numberInput.addEventListener("input", () => {
      previewNumber.textContent = numberInput.value || "10";
    });
  });
</script>

{% schema %}
{
  "name": "Jersey Customizer",
  "target": "section",
  "settings": []
}
{% endschema %}










